<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.fragment.HomeFragmentTab">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C7ECE0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText

                        android:id="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/background"
                        android:drawableLeft="@drawable/baseline_search_24"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Search for..."
                        android:inputType="text"
                        android:paddingStart="5dp"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.009" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">


                    <ViewFlipper

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoStart="true"
                        android:flipInterval="3000"
                        android:inAnimation="@android:anim/slide_in_left"
                        android:outAnimation="@android:anim/slide_out_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5">


                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image4" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image1" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image2" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image3" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/vitamins" />
                    </ViewFlipper>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/protein"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg">

                        </LinearLayout>


                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/jar_2796607" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Protein"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/product"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView
                            android:id="@+id/product_img"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/products" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="HealthCare Product"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/devices_img"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/defribillator" />

                        <TextView
                            android:id="@+id/devices"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Devices"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/baseline_call_24" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="Get HealthCare at Home"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                        <Button
                            android:id="@+id/call"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="270dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/btn_back"
                            android:text="Call" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/prescription"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/prescription_3974864" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Prescription"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/custom_order"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/completed_task_1632670" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Custom Order"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView
                            android:id="@+id/order"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/communication_10405086" />

                        <TextView
                            android:id="@+id/Order"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Call to order"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/healthy"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView
                            android:id="@+id/healthy_img"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/healthy_food" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Healthy food and drinks"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        android:id="@+id/cold"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                       >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView
                            android:id="@+id/cold_cough"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/cough_syrup" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Cough an Cold"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        android:id="@+id/wellness"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView
                            android:id="@+id/wellness_img"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/meditation" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Health Aid Wellness"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/familyCare"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView
                            android:id="@+id/family_img"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/family" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Family Care"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:id="@+id/sexual"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView
                            android:id="@+id/sexual_img"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/contraceptive" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Sexual Wellness"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/silver_bg"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        android:id="@+id/contact"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="@drawable/purple_bgpurple_bg"></LinearLayout>

                        <ImageView
                            android:id="@+id/contact_img"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/whatsapp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Whatsapp"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>